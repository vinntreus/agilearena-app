.page-header
  h1 Register

- if(typeof error !== 'undefined')
  div.alert.alert-error
    strong Could not register: 
    #{error}

form(method='post', action='/register', id='register-user')
  div.block
    label Username:
    input(type="text", name='user[username]', autofocus='true', value=' ')
  div.block
    label Password:
    input(type="password", name='user[password]')
  div.form-actions
    button.btn.btn-primary(type="submit") Create